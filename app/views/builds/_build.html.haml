%tr.build.alert{class: build_status_alert_class(build)}
  %td.status
    = build.status

  %td.build-link
    = link_to project_build_path(@project, build) do
      %strong #{build.short_sha}

  %td.build-branch
    - unless @ref
      - if build.project.github?
        = link_to_github_build build
      - else
        %span= build.ref

  %td.duration
    = build_duration build

  %td.timestamp
    - if build.finished_at
      %span #{time_ago_in_words build.finished_at} ago
